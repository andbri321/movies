<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-11">
          Lista dos Vídeos
      </div>
      <div class="col-md-1">
        <%= link_to new_movie_path(), class:"btn btn-primary" do%>
              <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        <% end %>
      </div>
    </div>
  </div>

  <table class="table">
    <thead>
    <tr>
      <th class="col-md-8" scope="col">Descrição</th>
      <th class="col-md-2" scope="col">Visualizações</th>
      <th class="col-md-1" scope="col"></th>
      <th class="col-md-1" scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.description %></td>
      <td><%= movie.visualization %></td>
      <td>
        <%= link_to edit_movie_path(movie), class:"btn btn-warning" do%>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        <% end %>
      </td>
      <td>
        <%= link_to movie_path(movie), method: :delete, data: { confirm: "Tem certeza que deseja excluir o vídeo ?" }, class:"btn btn-danger" do%>
              <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
  <%= paginate @movies %>
</div>
